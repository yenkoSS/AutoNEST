# Activare motor de rescriere
RewriteEngine On

########################################
# üîÅ Redirect www ‚Üí non-www
########################################
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

########################################
# üîí For»õare HTTPS
########################################
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

########################################
# ‚úÖ EXCLUDERE fi»ôier Google Search Console
########################################
RewriteCond %{REQUEST_URI} ^/google[a-z0-9]+\.html$ [NC]
RewriteRule ^ - [L]

########################################
# üè† Redirect root cƒÉtre landing page
########################################
RewriteCond %{REQUEST_URI} ^/?$ [OR]
RewriteCond %{REQUEST_URI} ^/index\.html$ [NC,OR]
RewriteCond %{REQUEST_URI} ^/$ 

########################
### MODIFFY ###
#######################
RewriteRule ^.*$ https://domeniul-tau.ro/nume-proiect-seo/ [R=301,L]

########################################
# ‚ö° GZIP Compression
########################################
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css
  AddOutputFilterByType DEFLATE application/javascript application/json
  AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

########################################
# üöÄ Browser Caching
########################################
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 30 days"
  ExpiresByType application/javascript "access plus 30 days"
  ExpiresByType image/jpeg "access plus 6 months"
  ExpiresByType image/png "access plus 6 months"
  ExpiresByType image/svg+xml "access plus 6 months"
  ExpiresByType image/webp "access plus 6 months"
  ExpiresDefault "access plus 1 week"
</IfModule>

########################################
# üõ°Ô∏è Securitate de bazƒÉ
########################################

# üîß Ascunde index.html din orice subfolder
RewriteCond %{THE_REQUEST} /(.*/)?index\.html [NC]
RewriteRule ^(.*/)?index\.html$ /%1 [R=301,L]

# Nu permite listarea fi»ôierelor
Options -Indexes

# BlocheazƒÉ accesul la fi»ôierul .htaccess
<Files .htaccess>
  Order allow,deny
  Deny from all
</Files>